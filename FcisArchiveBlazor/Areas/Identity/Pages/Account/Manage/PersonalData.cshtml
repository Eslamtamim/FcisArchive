@page "/Account/Manage/PersonalData"
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong class="text-danger">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" class="d-inline-block" method="post">
            <button class="btn btn-outline-primary" type="submit">Download</button>
        </form>
        <a id="delete" asp-page="DeletePersonalData" class="btn mx-2 d-inline-block btn-outline-danger">Delete</a>

     
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
